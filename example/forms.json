{
    "theme":"bootstrap3",
    "method":"POST",
    "action":"/index",
    "id":"testForm",
    "withButtons":true,
    "elements":[
        {
            "type":"text",
            "name":"user",
            "label":"User Name",
            "value":"",
            "valid":"required;maxSize(3)",
            "attributes":[
                ["class","textInput"],
                ["style","border:1px solid #ccc"]
            ]
        },
        {
            "type":"fieldset",
            "label":"Alias Name",
            "elements":[
                {
                    "type":"text",
                    "name":"user1",
                    "label":"User Name1",
                    "value":""
                },
                {
                    "type":"text",
                    "name":"user2",
                    "label":"User Name2",
                    "value":""
                }
            ]
        },
        {
            "type":"select",
            "name":"birthday",
            "label":"Birthday",
            "valid":"required",
            "value":"1984",
            "choices":[
                {"option":["1983","1983"],"checked":true},
                {"option":["1984","1984"]},
                {"option":["1985","1985"]}
                // {"option":["1985","1985"]}
            ]
        },
        {
            "type":"langset",
            //"name":"title",
            //"label":"Title",
            "languages":[
                {
                    "id":"en",
                    "label":"英语",
                    "nameFormat":"~"
                },
                {
                    "id":"zh-CN",
                    "label":"中文",
                    "nameFormat":"~"
                }
            ],
            "elements":[
                {
                    "id":"title",
                    "type":"text",
                    "name":"title",
                    "label":"标题",
                    //"template":"passwordinput"
                },
                {
                    "type":"textarea",
                    "name":"content",
                    "label":"内容"
                },
                {
                    "type":"fieldset",
                    "name":"seo",
                    "label":"meta",
                    "elements":[
                        {
                            "id":"metaTitle",
                            "type":"text",
                            "name":"metaTitle",
                            "label":"SEO标题"
                        },{
                            "type":"text",
                            "name":"metaKeywords",
                            "label":"SEO关键词"
                        }
                    ]
                }
            ]
        },
        {
            "type":"radio",
            "name":"show",
            "label":"Show",
            "valid":"required",
            "value":"0",
            "choices":[
                {"option":["1","Show"],"checked":true},
                {"option":["0","Hide"]}
            ]
        }
    ]
}